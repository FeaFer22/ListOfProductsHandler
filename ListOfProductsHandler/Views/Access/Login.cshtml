@model ListOfProductsHandler.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="Name" asp-for="userName"/>
        <input type="password" placeholder="Password" asp-for="userPassword"/>
        <button type="submit">Login</button>
    </form>

    @if (ViewData["ValidateMessage"] != null) {
        <br/>
        <br/>
        <label>
            @ViewData["ValidateMessage"]
        </label>
    }

</body>
</html>
